<Window x:Class="Memory_InSchritten.UserControls.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_InSchritten.UserControls"
        mc:Ignorable="d"
        Title="Memory" Height="150" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="TitleText" HorizontalAlignment="Center" Margin="10"/>
            <StackPanel Orientation="Horizontal" Margin="10,0">
                <TextBox x:Name="Input" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Width="120" Margin="10"/>
                <Button x:Name="Ok" Content="Ok" HorizontalAlignment="Right" Margin="10" Click="Ok_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
